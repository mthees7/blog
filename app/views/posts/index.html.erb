<h1>Listing posts</h1>
<a href="/posts/new"> Create Post <i class="fa fa-plus-square-o"></i></a>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <div class="jumbotron">
    <div class="post-info">
      <h1><%= post.title %></h1>
      <p><a href="/posts/<%= post.id %>" class="btn btn-primary btn-lg" role="button">View Post</a></p>
    </div>
    <div class="post-links">
      <span><%= link_to 'Edit', edit_post_path(post) %></span>
      <span><%= button_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </div>
  </div>
<% end %>

